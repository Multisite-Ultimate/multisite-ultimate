{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "outDir": "./dist/js",
    "sourceMap": true,
    "declaration": false,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "assets/js/**/*.ts",
    "assets/js/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "dist"
  ]
} 